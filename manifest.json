{
  "manifest_version": 3,
  "name": "DevNet Wallet",
  "version": "1.0.1",
  "description": "A secure DevNet-focused browser wallet for testing smart contracts across multiple blockchains â€” never mainnet",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:8545/*",
    "http://localhost:8545/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
  ,
  "browser_specific_settings": {
    "gecko": {
      "id": "test-wallet@yourservice.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
